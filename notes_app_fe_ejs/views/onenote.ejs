<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Note</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #333;
            overflow: hidden;
        }
        .navbar{
            display: flex;
            justify-content: flex-start;
        }
        .navbar a {
            float: left;
            display: block;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        .navbar a:hover {
            background-color: #ddd;
            color: black;
        }

        .container {
            padding: 20px;
        }

        .note {
            border: 1px solid #ddd;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
        }

        .note-header {
            font-weight: bold;
        }

        .note-text {
            margin: 10px 0;
        }

        .note-meta {
            font-size: 0.9em;
            color: #555;
        }

        .edit-button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
        }

        .delete-button {
            background-color: #ff0000;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
        }

        .edit-button:hover {
            background-color: #45a049;
        }

        .delete-button:hover {
            background-color: #f82020;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <% if (!user) { %>
            <a href="/login">Login</a>
            <a href="/register">Register</a>
        <% } %>
        <% if(user) { %>
            <a href="/user/info">Account</a>
            <a href="/user/notes">My Notes</a>
            <a href="/note/new">New Note</a>
            <a href="/logout" class="right">Logout</a>
        <% } %>
    </div>
    <div class="container">
        <div class="note">
            <div class="note-header">
                <%= note.author %>
            </div>
            <div class="note-text">
                <%= note.text %>
            </div>
            <div class="note-meta">
                <%= new Date(note.createtime).toLocaleString() %>
                <% if (note.isEdit) { %>
                    <span>(Edited)</span>
                <% } %>
            </div>
            <% if (note.has_ac && user && note.has_ac.includes(user._id)) { %>
                <a href="/note/edit/<%= note._id %>" class="btn btn-success">Edit</a>
                
            <% } %>
            <% if(note && user && note.author == user.name) {%>
                <a href="/note/delete/<%= note._id %>" class="btn btn-danger">Delete</a>
            <% } %>
        </div>
        <% if(user && acclist) { %>
            <!-- Access List -->
            <div class="mt-4">
                <h4>Users with access to this note:</h4>
                <ul class="list-group">
                    <% if (acclist && acclist.length > 0) { %>
                        <% acclist.forEach(user => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <%= user.name %>
                                <% if(user.name != note.author) {%>
                                    <a href="/note/revoke/<%= note._id %>/<%= user.name %>" class="btn btn-danger btn-sm">Revoke Access</a>
                                <% } %>    
                            </li>
                        <% }) %>
                    <% } else { %>
                        <li class="list-group-item">No users have access to this note.</li>
                    <% } %>
                </ul>
            </div>
             <!-- Share Note -->
            <div class="mt-4">
                <h4>Share this note:</h4>
                <form action="/note/share/<%= note._id %>" method="POST">
                    <div class="form-group">
                        <input type="text" name="username" class="form-control" placeholder="Enter username to share with">
                    </div>
                    <button type="submit" class="btn btn-primary">Share Note</button>
                </form>
            </div>
        <% } %>
    </div>
</body>
</html>
